<div class="form-part list">
    <div class="list-container">
        {{> contactsBtn}}
    </div>
    <form id="form-add">
        <div class="form-part data">
            <input type="text" name="fullName" placeholder="ФИО" required>
            <input type="tel" name="phoneNumber" placeholder="+375(33)111-22-33" pattern="\+375\([0-9]{2}\)[0-9]{3}-[0-9]{2}-[0-9]{2}" title="+375(33)111-22-33" required autocomplete="off">
            <span class="validity"></span>
        </div>
        <div class="form-part control">
            <button id="add" type="submit">Добавить</button>
            <button type="button" onclick="{{refuse}}">Отказаться</button>
        </div>
    </form>
</div>
